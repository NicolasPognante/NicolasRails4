<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <h3><%= task.title %></h3>
  <p><%= task.details %></p>
  <p>Completed: <%= task.completed %></p>
  <%= link_to "Details", task_path(task) %> |
  <%= link_to "Edit", edit_task_path(task) %> |
  <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?"} %>
<% end %>
